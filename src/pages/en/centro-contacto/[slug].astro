---
import { contactCenterServices } from "../../../data/contactCenterServices";
import ContactCenterDetailPage from "../../../components/ContactCenterDetailPage.astro";

export async function getStaticPaths() {
  return contactCenterServices.map((service) => ({
    params: { slug: service.id },
    props: { service },
  }));
}

const { service } = Astro.props;

// Get 3 random related services (excluding current one)
const relatedServices = contactCenterServices
  .filter((s) => s.id !== service.id)
  .sort(() => Math.random() - 0.5)
  .slice(0, 3);
---

<ContactCenterDetailPage
  service={service}
  relatedServices={relatedServices}
  lang="en"
/>
