---
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const services = [
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
    </svg>`,
    titleKey: "service.legal.title",
    descKey: "service.legal.description",
    features: [
      "service.legal.feature1",
      "service.legal.feature2",
      "service.legal.feature3",
    ],
    color: "blue",
  },
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 3l-6 6m0 0V4m0 5h5M5 3a2 2 0 00-2 2v1c0 8.284 6.716 15 15 15h1a2 2 0 002-2v-3.28a1 1 0 00-.684-.948l-4.493-1.498a1 1 0 00-1.21.502l-1.13 2.257a11.042 11.042 0 01-5.516-5.517l2.257-1.128a1 1 0 00.502-1.21L9.228 3.683A1 1 0 008.279 3H5z"/>
    </svg>`,
    titleKey: "service.contact.title",
    descKey: "service.contact.description",
    features: [
      "service.contact.feature1",
      "service.contact.feature2",
      "service.contact.feature3",
    ],
    color: "cyan",
  },
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
    </svg>`,
    titleKey: "service.campaigns.title",
    descKey: "service.campaigns.description",
    features: [
      "service.campaigns.feature1",
      "service.campaigns.feature2",
      "service.campaigns.feature3",
    ],
    color: "indigo",
  },
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
    </svg>`,
    titleKey: "service.medical.title",
    descKey: "service.medical.description",
    features: [
      "service.medical.feature1",
      "service.medical.feature2",
      "service.medical.feature3",
    ],
    color: "green",
  },
];
---

<section id="services" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl text-gray-900 mb-4">
        {t("services.title")}
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {t("services.subtitle")}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {
        services.map((service) => (
          <div class="card-standard">
            <div class="card-icon">
              <Fragment set:html={service.icon} />
            </div>

            <h3 class="text-2xl text-gray-900 mb-4">
              {t(service.titleKey as any)}
            </h3>

            <p class="text-gray-600 mb-6">{t(service.descKey as any)}</p>

            <ul class="space-y-3">
              {service.features.map((feature) => (
                <li class="flex items-start space-x-3">
                  <svg
                    class="w-6 h-6 text-gold-700 flex-shrink-0 mt-0.5"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-gray-700">{t(feature as any)}</span>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>
