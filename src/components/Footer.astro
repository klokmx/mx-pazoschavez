---
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();

const legalLinks = [
  { key: "footer.privacy", href: "/privacidad" },
  { key: "footer.security", href: "/seguridad" },
  { key: "footer.antibribery", href: "/antisoborno" },
  { key: "footer.complaints", href: "/quejas" },
];
---

<footer class="footer">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <div class="md:col-span-2">
        <div class="mb-4">
          <img
            src={import.meta.env.BASE_URL + "images/LogoFooter.svg"}
            alt="Bufete Jurídico Pazos Chávez S.C."
            class="h-16"
          />
        </div>
        <p class="text-gray-400 mb-4 max-w-md">
          {t("footer.desc")}
        </p>
        <div class="flex space-x-4">
          <a
            href="https://www.facebook.com/asesoresyconsultoresoficial"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-social-footer"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="https://www.linkedin.com/company/asesoresyconsultoresoficial"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-social-footer"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-4">{t("nav.services")}</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="#services"
              class="text-gray-400 hover:text-blue-400 transition-colors duration-200"
            >
              {t("service.legal.title")}
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="text-gray-400 hover:text-blue-400 transition-colors duration-200"
            >
              {t("service.contact.title")}
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="text-gray-400 hover:text-blue-400 transition-colors duration-200"
            >
              {t("service.campaigns.title")}
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="text-gray-400 hover:text-blue-400 transition-colors duration-200"
            >
              {t("service.medical.title")}
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-lg font-semibold mb-4">{t("nav.contact")}</h3>
        <ul class="space-y-3 text-gray-400">
          <li class="flex items-start space-x-2">
            <svg
              class="w-5 h-5 mt-0.5 shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <a
              href="tel:+525544453040"
              class="hover:text-main-blue-400 transition-colors"
            >
              55 4445 3040
            </a>
          </li>
          <li class="flex items-start space-x-2">
            <svg
              class="w-5 h-5 mt-0.5 shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a
              href="mailto:contacto@pazoschavez.mx"
              class="hover:text-main-blue-400 transition-colors break-all"
            >
              contacto@pazoschavez.mx
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Legal Links -->
    <div class="border-t border-gray-800 pt-8">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <div class="text-gray-400 text-sm">
          © {currentYear} Bufete Jurídico Pazos Chávez S.C. | {
            t("footer.rights")
          }
        </div>
        <div class="flex flex-wrap justify-center gap-6 text-sm">
          {
            legalLinks.map((link) => (
              <a
                href={link.href}
                class="text-gray-400 hover:text-blue-400 transition-colors duration-200"
              >
                {t(link.key as any)}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
