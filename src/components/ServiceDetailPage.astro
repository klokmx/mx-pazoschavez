const translations = {
  es: {
    requestConsultation: "Solicitar Consulta",
    relatedServices:
      category === "legal"
        ? "Servicios Legales Relacionados"
        : "Servicios Relacionados",
    viewAllServices:
      category === "legal"
        ? "Ver Todos los Servicios Legales"
        : "Ver Todos los Servicios",
    sectionTitle:
      category === "legal" ? "Servicios" : "Servicios de Centro de Contacto",
  },
  en: {
    requestConsultation: "Request Consultation",
    relatedServices:
      category === "legal" ? "Related Legal Services" : "Related Services",
    viewAllServices:
      category === "legal" ? "View All Legal Services" : "View All Services",
    sectionTitle: category === "legal" ? "Services" : "Contact Center Services",
  },
};

const t = translations[lang];
const categoryPath =
  category === "legal" ? "servicios-legales" : "centro-contacto";
const imagePlaceholder = `https://placehold.co/1200x600/0A2240/FFFFFF/png?text=${encodeURIComponent(service.title[lang])}`;
---

<Layout title={service.title[lang]} lang={lang}>
  <Navbar />

  <!-- 1. SERVICE NAME & HERO IMAGE -->
  <section class="service-hero">
    <img
      src={imagePlaceholder}
      alt={service.title[lang]}
      class="service-hero-img"
    />
    <div class="service-hero-gradient"></div>

    <div class="service-hero-content">
      <div class="flex items-center mb-6">
        <div class="hero-icon">
          <svg class="svg-icon svg-stroke" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d={iconMap[service.icon]}></path>
          </svg>
        </div>
      </div>
      <h1 class="hero-title">
        {service.title[lang]}
      </h1>
      <p class="hero-description">
        {service.description[lang]}
      </p>
    </div>
  </section>

  <!-- 2. INTRODUCTION PARAGRAPH -->
  <section class="section section-bg-gray">
    <div class="container-custom">
      <div class="container-narrow">
        <p class="body-text-large mb-12">
          {service.introduction[lang]}
        </p>

        <!-- 3. BENEFITS -->
        <h2 class="section-title-center mb-8">
          {lang === "es" ? "Beneficios" : "Benefits"}
        </h2>
        <div class="grid-2-col">
          {
            service.benefits[lang].map((benefit) => (
              <div class="card-standard">
                <div class="card-icon">
                  <svg class="svg-icon svg-stroke" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d={iconMap[service.icon]}
                    />
                  </svg>
                </div>
                <p class="body-text">{benefit}</p>
              </div>
            ))
          }
        </div>
      </div>

      <!-- 4. CALL TO ACTION -->
      <div class="container-narrow mt-12">
        <div class="card-cta">
          <h3 class="card-cta-title">
            {
              lang === "es"
                ? "¿Necesita más información?"
                : "Need more information?"
            }
          </h3>
          <p class="card-cta-description">
            {
              lang === "es"
                ? "Nuestros especialistas están listos para atenderle y resolver todas sus dudas."
                : "Our specialists are ready to assist you and answer all your questions."
            }
          </p>
          <a href="#contacto" class="btn-primary">
            {t.requestConsultation}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- 4. CALL TO ACTION & 5. RELATED SERVICES -->
  <section class="section section-bg-white">
    <div class="container-custom">
      <div class="section-header-flex">
        <h2 class="section-title">{t.relatedServices}</h2>
        <a
          href={lang === "es"
            ? `${import.meta.env.BASE_URL}#${categoryPath}`
            : `${import.meta.env.BASE_URL}en#${categoryPath}`}
          class="link-arrow"
        >
          {t.viewAllServices} →
        </a>
      </div>

      <div class="grid-3-col">
        {
          relatedServices.map((relatedService) => (
            <a
              href={
                lang === "es"
                  ? `${import.meta.env.BASE_URL}${categoryPath}/${relatedService.id}`
                  : `${import.meta.env.BASE_URL}en/${categoryPath}/${relatedService.id}`
              }
              class="card-standard"
            >
              <div class="card-icon">
                <svg class="svg-icon svg-stroke" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d={iconMap[relatedService.icon]}
                  />
                </svg>
              </div>

              <h3 class="card-title">{relatedService.title[lang]}</h3>

              <p class="card-description line-clamp-3">
                {relatedService.description[lang]}
              </p>

              <div class="card-link">
                {lang === "es" ? "Más información" : "Learn more"} →
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <Footer />
</Layout>
