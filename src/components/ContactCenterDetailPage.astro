---
import Layout from "../layouts/Layout.astro";
import Navbar from "./Navbar.astro";
import Footer from "./Footer.astro";
import type { ContactCenterService } from "../data/contactCenterServices";

interface Props {
  service: ContactCenterService;
  relatedServices: ContactCenterService[];
  lang: "es" | "en";
}

const { service, relatedServices, lang } = Astro.props;

