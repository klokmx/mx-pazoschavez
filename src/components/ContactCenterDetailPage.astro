const translations = {
  es: {
    requestConsultation: "Solicitar Consulta",
    relatedServices: "Servicios Relacionados",
    viewAllServices: "Ver Todos los Servicios",
    backToServices: "Volver a Servicios",
  },
  en: {
    requestConsultation: "Request Consultation",
    relatedServices: "Related Services",
    viewAllServices: "View All Services",
    backToServices: "Back to Services",
  },
};

const t = translations[lang];
const categoryPath = lang === "es" ? "centro-contacto" : "contact-center";
const imagePlaceholder = `https://placehold.co/1200x600/0A2240/FFFFFF/png?text=${encodeURIComponent(service.title[lang])}`;
---

<Layout title={service.title[lang]} lang={lang}>
  <Navbar />

  <!-- SERVICE HERO -->
  <section class="service-hero">
    <img
      src={imagePlaceholder}
      alt={service.title[lang]}
      class="service-hero-img"
    />
    <div class="service-hero-gradient"></div>

    <div class="service-hero-content">
      <div class="flex items-center mb-6">
        <div class="hero-icon">
          <svg class="svg-icon svg-stroke" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d={iconMap[service.icon]}></path>
          </svg>
        </div>
      </div>
      <h1 class="hero-title">
        {service.title[lang]}
      </h1>
      <p class="hero-description">
        {service.description[lang]}
      </p>
    </div>
  </section>

  <!-- SERVICE CONTENT -->
  <section class="section section-bg-gray">
    <div class="container-custom">
      <div class="container-narrow">
        {
          service.fullContent[lang].map((paragraph) => (
            <p class="body-text-large mb-6">{paragraph}</p>
          ))
        }

        <div class="text-center mt-12">
          <a
            href={`/${lang === "en" ? "en/" : ""}#contacto`}
            class="cta-button"
          >
            {t.requestConsultation}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- RELATED SERVICES -->
  {
    relatedServices.length > 0 && (
      <section class="section">
        <div class="container-custom">
          <h2 class="section-title-center mb-12">{t.relatedServices}</h2>
          <div class="grid-3-col">
            {relatedServices.map((related) => (
              <a
                href={`/${lang === "en" ? "en/" : ""}${categoryPath}/${related.id}`}
                class="service-card"
              >
                <div class="service-card-icon">
                  <svg class="svg-icon svg-stroke" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d={iconMap[related.icon]}
                    />
                  </svg>
                </div>
                <h3 class="service-card-title">{related.title[lang]}</h3>
                <p class="service-card-description">
                  {related.description[lang]}
                </p>
              </a>
            ))}
          </div>

          <div class="text-center mt-12">
            <a
              href={`/${lang === "en" ? "en/" : ""}#servicios`}
              class="link-arrow"
            >
              {t.viewAllServices}
              <svg class="svg-icon" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
        </div>
      </section>
    )
  }

  <Footer />
</Layout>

<style>
  .service-hero {
    position: relative;
    height: 500px;
    overflow: hidden;
  }

  .service-hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .service-hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(10, 34, 64, 0.7),
      rgba(10, 34, 64, 0.9)
    );
  }

  .service-hero-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
    color: white;
  }

  .hero-icon {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
  }

  .hero-icon svg {
    width: 40px;
    height: 40px;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    max-width: 800px;
  }

  .hero-description {
    font-size: 1.25rem;
    max-width: 600px;
    opacity: 0.9;
  }

  .service-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .service-card-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #0a2240 0%, #1a4d7a 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .service-card-icon svg {
    width: 30px;
    height: 30px;
    stroke: white;
  }

  .service-card-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: #0a2240;
  }

  .service-card-description {
    color: #64748b;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .service-hero {
      height: 400px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }
  }
</style>
