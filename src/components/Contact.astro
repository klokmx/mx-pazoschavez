---
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl text-gray-900 mb-4">
        {t("contact.title")}
      </h2>
      <p class="text-xl text-gray-600">
        {t("contact.subtitle")}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div
          class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <svg
                class="w-12 h-12 text-gold-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {t("contact.phone")}
              </h3>
              <a
                href="tel:+525550250709"
                class="text-main-blue-500 hover:text-main-blue-700 text-xl font-medium"
              >
                55 50 25 07 09
              </a>
            </div>
          </div>
        </div>

        <div
          class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <svg
                class="w-12 h-12 text-gold-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {t("contact.email")}
              </h3>
              <a
                href="mailto:contacto@pazoschavez.mx"
                class="text-main-blue-500 hover:text-main-blue-700 break-all"
              >
                contacto@pazoschavez.mx
              </a>
            </div>
          </div>
        </div>

        <div
          class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <svg
                class="w-12 h-12 text-gold-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {t("contact.schedule")}
              </h3>
              <p class="text-gray-600">
                {
                  lang === "es"
                    ? "Lunes a Viernes: 9:00 - 18:00"
                    : "Monday to Friday: 9:00 AM - 6:00 PM"
                }<br />
                {
                  lang === "es"
                    ? "Sábado: 9:00 - 14:00"
                    : "Saturday: 9:00 AM - 2:00 PM"
                }
              </p>
            </div>
          </div>
        </div>

        <!-- Social Media -->
        <div class="flex space-x-4">
          <a
            href="https://www.facebook.com/asesoresyconsultoresoficial"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-social btn-social-facebook"
            aria-label="Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="https://www.linkedin.com/company/asesoresyconsultoresoficial"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-social btn-social-linkedin"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <form class="space-y-6" id="contact-form">
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              {lang === "es" ? "Nombre Completo" : "Full Name"}
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
              placeholder={lang === "es" ? "Tu nombre" : "Your name"}
            />
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              {lang === "es" ? "Correo Electrónico" : "Email"}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
              placeholder={lang === "es" ? "tu@email.com" : "your@email.com"}
            />
          </div>

          <div>
            <label
              for="phone"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              {lang === "es" ? "Teléfono" : "Phone"}
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
              placeholder={lang === "es" ? "55 1234 5678" : "55 1234 5678"}
            />
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              {lang === "es" ? "Mensaje" : "Message"}
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
              placeholder={lang === "es"
                ? "Cuéntanos cómo podemos ayudarte..."
                : "Tell us how we can help you..."}></textarea>
          </div>

          <button type="submit" class="btn-submit">
            {t("contact.cta")}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    // Here you would typically send the data to a backend
    console.log("Form data:", data);

    // Show success message
    alert(
      document.documentElement.lang === "es"
        ? "¡Gracias por contactarnos! Nos pondremos en contacto pronto."
        : "Thank you for contacting us! We will get in touch soon."
    );

    form.reset();
  });
</script>
