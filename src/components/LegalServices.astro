};
---

<section id="servicios-legales" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl text-gray-900 mb-6">
        {t("services.legal.title")}
      </h2>
      <p class="text-xl text-gray-700 max-w-4xl mx-auto mb-4">
        {t("services.legal.intro")}
      </p>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {t("services.legal.desc")}
      </p>
    </div>

    <!-- Practice Areas Grid -->
    <div class="grid-services mt-16">
      {
        legalServices.map((service) => (
          <a
            href={
              lang === "es"
                ? `/servicios-legales/${service.id}`
                : `/en/servicios-legales/${service.id}`
            }
            class="card-standard"
          >
            <div class="card-icon">
              <svg class="svg-icon svg-stroke" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d={iconMap[service.icon]}
                />
              </svg>
            </div>

            <h3 class="card-title">{service.title[lang]}</h3>

            <p class="card-description">{service.description[lang]}</p>

            <div class="card-link">
              {lang === "es" ? "Más información" : "Learn more"} →
            </div>
          </a>
        ))
      }
    </div>

    <!-- Values Section -->
    <div class="mt-20 grid md:grid-cols-3 gap-8">
      <div class="bg-main-blue-950 rounded-2xl p-8 text-white">
        <svg
          class="w-12 h-12 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <h3 class="text-2xl mb-3">{t("about.experience.title")}</h3>
        <p class="text-main-blue-100">{t("about.experience.legal")}</p>
      </div>

      <div class="bg-main-blue-700 rounded-2xl p-8 text-white">
        <svg
          class="w-12 h-12 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
          ></path>
        </svg>
        <h3 class="text-2xl mb-3">{t("about.team.title")}</h3>
        <p class="text-main-blue-100">{t("about.team.desc")}</p>
        <p class="text-main-blue-100 mt-2">{t("about.team.values")}</p>
      </div>

      <div class="bg-main-blue-500 rounded-2xl p-8 text-white">
        <svg class="w-12 h-12 mb-4" fill="currentColor" viewBox="0 0 20 20">
          <path
            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
          ></path>
        </svg>
        <h3 class="text-2xl mb-3">{t("quality.title")}</h3>
        <p class="text-main-blue-100 text-sm">{t("quality.desc")}</p>
      </div>
    </div>
  </div>
</section>
