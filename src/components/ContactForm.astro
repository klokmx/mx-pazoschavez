---
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contacto" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl text-gray-900 mb-4">
        {t("contact.title")}
      </h2>
      <p class="text-xl text-gray-600">
        {t("contact.subtitle")}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Contact Information -->
      <div class="space-y-6">
        <!-- Phone -->
        <div
          class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <div class="flex items-start space-x-4">
            <div class="shrink-0">
              <svg
                class="w-12 h-12 text-gold-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {t("contact.phone")}
              </h3>
              <a
                href="tel:+525544453040"
                class="text-main-blue-500 hover:text-main-blue-700 text-xl font-medium block"
              >
                55 4445 3040
              </a>
            </div>
          </div>
        </div>

        <!-- Email -->
        <div
          class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <div class="flex items-start space-x-4">
            <div class="shrink-0">
              <svg
                class="w-12 h-12 text-gold-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {t("contact.email")}
              </h3>
              <a
                href="mailto:contacto@pazoschavez.mx"
                class="text-main-blue-500 hover:text-main-blue-700 break-all"
              >
                contacto@pazoschavez.mx
              </a>
            </div>
          </div>
        </div>

        <!-- Address -->
        <div
          class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <div class="flex items-start space-x-4">
            <div class="shrink-0">
              <svg
                class="w-12 h-12 text-gold-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {t("contact.address")}
              </h3>
              <p class="text-gray-600">
                {t("contact.address.full")}
              </p>
            </div>
          </div>
        </div>

        <!-- Social Media -->
        <div class="flex space-x-4 pt-4">
          <a
            href="https://www.facebook.com/asesoresyconsultoresoficial"
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 bg-main-blue-500 rounded-lg flex items-center justify-center text-white hover:bg-main-blue-700 transition-colors shadow-md"
            aria-label="Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="https://www.linkedin.com/company/asesoresyconsultoresoficial"
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 bg-main-blue-700 rounded-lg flex items-center justify-center text-white hover:bg-main-blue-800 transition-colors shadow-md"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white rounded-xl p-8 shadow-lg">
        <form class="space-y-5" id="contact-form">
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                {t("contact.form.name")}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
                placeholder=""
              />
            </div>

            <div>
              <label
                for="lastname"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                {t("contact.form.lastname")}
              </label>
              <input
                type="text"
                id="lastname"
                name="lastname"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
                placeholder=""
              />
            </div>
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              {t("contact.form.email")}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
              placeholder=""
            />
          </div>

          <div>
            <label
              for="phone"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              {t("contact.form.phone")}
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
              placeholder=""
            />
          </div>

          <div>
            <label
              for="company"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              {t("contact.form.company")}
            </label>
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
              placeholder=""
            />
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              {t("contact.form.comments")}
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition-all duration-200"
              placeholder=""></textarea>
          </div>

          <p class="text-xs text-gray-500">
            {t("contact.form.privacy")}
          </p>

          <button
            type="submit"
            class="w-full bg-main-blue-500 text-white font-semibold py-4 rounded-lg hover:bg-main-blue-700 transition-colors shadow-md"
          >
            {t("contact.form.submit")}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    console.log("Form data:", data);

    const lang = document.documentElement.lang;
    alert(
      lang === "es"
        ? "Â¡Gracias por contactarnos! Nos pondremos en contacto pronto."
        : "Thank you for contacting us! We will get in touch soon."
    );

    form.reset();
  });
</script>
