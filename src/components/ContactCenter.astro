---

<section id="centro-contacto" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl text-gray-900 mb-6">
        {t("services.contact.title")}
      </h2>
      <p class="text-xl text-gray-700 max-w-4xl mx-auto mb-4">
        {t("services.contact.intro")}
      </p>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {t("services.contact.desc")}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid-services mt-16">
      {
        contactCenterServices.map((service) => (
          <a
            href={
              lang === "es"
                ? `${import.meta.env.BASE_URL}centro-contacto/${service.id}`
                : `${import.meta.env.BASE_URL}en/centro-contacto/${service.id}`
            }
            class="card-standard"
          >
            <div class="card-icon">
              <svg class="svg-icon svg-stroke" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d={iconMap[service.icon]}
                />
              </svg>
            </div>

            <h3 class="card-title">{service.title[lang]}</h3>

            <p class="card-description">{service.description[lang]}</p>

            <div class="card-link">
              {lang === "es" ? "Más información" : "Learn more"} →
            </div>
          </a>
        ))
      }
    </div>

    <!-- Infrastructure Section -->
    <div class="mt-20 grid md:grid-cols-3 gap-8">
      <div class="bg-main-blue-950 rounded-2xl p-8 text-white">
        <svg
          class="w-12 h-12 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
          ></path>
        </svg>
        <h3 class="text-2xl mb-3">Call Center de Clase Mundial</h3>
        <p class="text-main-blue-100">{t("about.infrastructure.callcenter")}</p>
      </div>

      <div class="bg-main-blue-700 rounded-2xl p-8 text-white">
        <svg
          class="w-12 h-12 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
          ></path>
        </svg>
        <h3 class="text-2xl mb-3">CRM Propio</h3>
        <p class="text-main-blue-100">{t("about.infrastructure.crm")}</p>
      </div>

      <div class="bg-main-blue-500 rounded-2xl p-8 text-white">
        <svg
          class="w-12 h-12 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
