  en: {
    requestConsultation: "Request Consultation",
    otherServices: "Other Legal Services",
    needHelp: "Need specialized legal advice?",
    contactToday: "Contact us today and discover how we can help you",
  },
};

const t = translations[lang];
---

<main class="pt-20">
  <!-- Hero Section -->
  <section class="bg-main-blue-500 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block bg-main-blue-700 rounded-full px-6 py-2 mb-6">
          <span class="text-sm font-medium">{service.hero.badge}</span>
        </div>
        <h1 class="text-5xl md:text-6xl mb-6">
          {service.hero.title}
        </h1>
        <p class="text-xl md:text-2xl text-main-blue-100 mb-8">
          {service.hero.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#contacto"
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-main-blue-500 rounded-lg font-semibold hover:bg-main-blue-50 transition-colors shadow-lg"
          >
            {t.requestConsultation}
          </a>
          <a
            href="tel:+525544453040"
            class="inline-flex items-center justify-center px-8 py-4 bg-main-blue-700 text-white rounded-lg font-semibold hover:bg-main-blue-800 transition-colors"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            55 4445 3040
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <!-- Overview -->
        <div class="prose prose-lg max-w-none mb-16">
          <h2 class="text-4xl text-gray-900 mb-6">
            {service.overview.heading}
          </h2>
          {
            service.overview.paragraphs.map((paragraph) => (
              <p class="text-xl text-gray-600 mb-6">{paragraph}</p>
            ))
          }
        </div>

        <!-- Services -->
        <div class="mb-16">
          <h3 class="text-3xl text-gray-900 mb-8">
            {service.services.title}
          </h3>
          <div class="grid md:grid-cols-2 gap-6">
            {
              service.services.items.map((item) => (
                <div class="bg-main-blue-50 rounded-xl p-8 border border-main-blue-100">
                  <div class="w-12 h-12 bg-main-blue-500 rounded-lg flex items-center justify-center mb-4">
                    <svg
                      class="w-6 h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d={iconMap[item.icon] || iconMap["document-check"]}
                      />
                    </svg>
                  </div>
                  <h4 class="text-xl text-gray-900 mb-3">{item.title}</h4>
                  <p class="text-gray-600">{item.description}</p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Benefits -->
        <div class="bg-main-blue-950 rounded-2xl p-12 text-white mb-16">
          <h3 class="text-3xl mb-8">{service.benefits.title}</h3>
          <div class="grid md:grid-cols-3 gap-8">
            {
              service.benefits.stats.map((stat) => (
                <div>
                  <div class="text-4xl text-cyan-400 mb-2">{stat.value}</div>
                  <div class="text-lg font-semibold mb-2">{stat.label}</div>
                  <p class="text-main-blue-100">{stat.description}</p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Industries (if available) -->
        {
          service.industries && (
            <div class="mb-16">
              <h3 class="text-3xl text-gray-900 mb-8">
                {service.industries.title}
              </h3>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {service.industries.items.map((industry) => (
                  <div class="text-center p-6 bg-gray-50 rounded-xl">
                    <div class="text-2xl mb-2">{industry.emoji}</div>
                    <div class="font-semibold text-gray-900">
                      {industry.name}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )
        }

        <!-- CTA Section -->
        <div
          id="contacto"
          class="bg-main-blue-50 rounded-2xl p-12 text-center border border-main-blue-100"
        >
          <h3 class="text-3xl text-gray-900 mb-4">
            {t.needHelp}
          </h3>
          <p class="text-xl text-gray-600 mb-8">
            {t.contactToday}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={lang === "es" ? "/#contacto" : "/en/#contacto"}
              class="inline-flex items-center justify-center px-8 py-4 bg-main-blue-500 text-white rounded-lg font-semibold hover:bg-main-blue-700 transition-colors shadow-lg"
            >
              {t.requestConsultation}
            </a>
            <a
              href="tel:+525544453040"
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-main-blue-500 border-2 border-main-blue-500 rounded-lg font-semibold hover:bg-main-blue-50 transition-colors"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              55 4445 3040
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Services -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <h3 class="text-2xl text-gray-900 mb-8">{t.otherServices}</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <slot name="related-services" />
        </div>
      </div>
    </div>
  </section>
</main>
